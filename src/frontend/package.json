{
  "_note": "TODO: Enable notarization by adding \"afterSign\": \"../../src/scripts/notarize.js\" to the build config (requires Developer ID Application certificate)",
  "name": "kiji-privacy-proxy",
  "productName": "Kiji Privacy Proxy",
  "version": "0.4.2",
  "description": "Dataiku's Kiji Privacy Proxy",
  "author": "Dataiku - Open Source Lab",
  "main": "src/electron/electron-main.js",
  "scripts": {
    "build": "webpack --config config/webpack.config.js --mode production",
    "build:electron": "ELECTRON=true webpack --config config/webpack.config.js --mode production",
    "dev": "webpack serve --config config/webpack.config.js --mode development --host 0.0.0.0",
    "start": "node server.js",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "npm run build:electron && electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@sentry/electron": "^7.7.1",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.1",
    "express": "^4.18.0",
    "http-proxy-middleware": "^2.0.6",
    "lucide-react": "^0.564.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-shepherd": "^6.1.9"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@changesets/cli": "^2.27.1",
    "@electron/notarize": "^3.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.23",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "html-webpack-plugin": "^5.6.6",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.3"
  },
  "build": {
    "appId": "com.kiji.proxy",
    "productName": "Kiji Privacy Proxy",
    "electronVersion": "28.3.3",
    "npmRebuild": false,
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/electron/electron-main.js",
      "src/electron/electron-preload.js",
      "package.json",
      "assets/icon.png",
      "assets/icon-16.png",
      "assets/arrow.png",
      "!**/model.onnx",
      "!**/pii_onnx_model/**/*",
      "!**/*.map",
      "!**/.DS_Store"
    ],
    "asar": true,
    "asarUnpack": [
      "resources/**/*"
    ],
    "compression": "normal",
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*",
          "!**/model.onnx",
          "!**/pii_onnx_model/**/*"
        ]
      }
    ],
    "fileAssociations": [],
    "protocols": [],
    "electronLanguages": [
      "en"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "minimumSystemVersion": "10.13"
    },
    "afterPack": "../../build/scripts/remove-locales.js",
    "dmg": {
      "title": "${productName} ${version}",
      "background": "assets/dmg-background.png",
      "iconSize": 100,
      "internetEnabled": false,
      "iconTextSize": 12,
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 600,
        "height": 420,
        "x": 400,
        "y": 100
      },
      "format": "UDZO",
      "artifactName": "${productName}-${version}.${ext}",
      "sign": false
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

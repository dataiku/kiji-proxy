FROM nginx:alpine

# Copy the demo HTML to nginx's default serving directory
COPY demo.html /usr/share/nginx/html/index.html

# Expose port 8888
EXPOSE 8888

# Custom nginx config to run on port 8888
RUN echo 'server { \
    listen 8888; \
    server_name localhost; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

CMD ["nginx", "-g", "daemon off;"]

{
  "name": "yaak-privacy-proxy",
  "version": "1.0.0",
  "description": "Yaak Privacy Proxy",
  "main": "electron-main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:electron": "ELECTRON=true webpack --mode production",
    "dev": "webpack serve --mode development --host 0.0.0.0",
    "start": "node server.js",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "npm run build:electron && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "express": "^4.18.0",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "build": {
    "appId": "com.yaak.proxy",
    "productName": "Yaak Privacy Proxy",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "electron-preload.js",
      "package.json",
      "assets/icon.png",
      "assets/arrow.png"
    ],
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "identity": null
    },
    "dmg": {
      "title": "${productName} ${version}",
      "background": "assets/dmg-background.png",
      "iconSize": 128,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "format": "UDZO"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
